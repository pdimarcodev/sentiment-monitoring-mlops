{
  "dashboard": {
    "id": null,
    "title": "Sentiment Analysis Monitoring",
    "tags": ["sentiment", "nlp", "mlops"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(sentiment_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "xAxis": {"show": true},
        "yAxes": [
          {"label": "requests/sec", "show": true}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(sentiment_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(sentiment_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "yAxes": [
          {"label": "seconds", "show": true}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Sentiment Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sentiment_predictions_total",
            "legendFormat": "{{sentiment}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Total Predictions",
        "type": "singlestat",
        "targets": [
          {
            "expr": "sum(sentiment_predictions_total)"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "5s"
  }
}